<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Enable ProcessionProgressBar.setDemoData() if you want to modify the layout interactively in the editor -->

    <item android:id="@android:id/background">
        <!-- Background shape -->
        <shape>
            <corners android:radius="6dip" />

            <gradient
                android:angle="90"
                android:centerY="0.75"
                android:endColor="#001550"
                android:startColor="#001040" />

            <stroke
                android:width="1dp"
                android:color="#ffffff" />
        </shape>
    </item>
    <item>
        <!-- Procession shape -->
        <shape>
            <corners android:radius="6dip" />

            <gradient
                android:angle="90"
                android:endColor="#006005"
                android:startColor="#007010" />

            <stroke
                android:width="1dp"
                android:color="#ffffff" />
        </shape>
    </item>
</layer-list>