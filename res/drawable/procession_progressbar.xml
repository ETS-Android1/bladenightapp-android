<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Enable ProcessionProgressBar.setDemoData() if you want to modify the layout interactively in the editor -->

    <item android:id="@android:id/background">
        <!-- Background shape -->
        <shape>
            <corners android:radius="4dip" />
            <solid android:color="@color/new_background" />

            <stroke
                android:width="1dp"
                android:color="#ffffff" />
        </shape>
    </item>
    <item>
        <!-- Procession shape -->
        <shape>
            <corners android:radius="6dip" />

            <gradient
                android:angle="90"
                android:endColor="@color/new_bar"
                android:startColor="@color/new_bar" />

            <stroke
                android:width="1dp"
                android:color="#ffffff" />
        </shape>
    </item>
</layer-list>