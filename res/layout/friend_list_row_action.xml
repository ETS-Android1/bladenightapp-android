<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_friend"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="3dip"
    android:orientation="horizontal"
    android:tag="">

    <ImageView
        android:id="@+id/action_color_block"
        android:layout_height="30dip"
        android:layout_weight="0.08"
        android:layout_width="wrap_content"
        android:background="@color/bn_green_light"
        android:src="@drawable/color_field"/>
    
    <TextView
	     android:id="@+id/action_row_friend_name"
	     android:layout_height="fill_parent"
	     android:textColor="@color/bn_white"
	     android:typeface="sans"
	     android:textSize="18dip"
	     android:textStyle="bold"
	     android:text="Heinz"
	     android:gravity="left|center_vertical"
	     android:paddingLeft="5dip"
	     android:layout_weight="0.2"
	     android:layout_width="0dp"/>

	 <TextView
	     android:id="@+id/action_row_time_rel"
	     android:layout_height="fill_parent"
	     android:textColor="@color/bn_white"
	     android:typeface="sans"
	     android:textSize="13dip"
	     android:textStyle="bold"
	     android:text="+ 01:24"
	     android:layout_weight="0.15"
	     android:layout_width="0dp"
	     android:gravity="right|center_vertical"/>

	 <TextView
	     android:id="@+id/action_row_distance_rel"
	     android:layout_height="fill_parent"
	     android:text="+ 254m"
	     android:textColor="@color/bn_white"
	     android:textSize="13dip"
	     android:textStyle="bold"
	     android:typeface="sans" 
	     android:layout_weight="0.15"
	     android:layout_width="0dp"
	     android:gravity="right|center_vertical"/>
 
    <TextView
        android:id="@+id/action_row_time_abs"
        android:layout_height="fill_parent"
        android:textColor="@color/bn_white"
        android:typeface="sans"
        android:textSize="13dip"
        android:textStyle="bold"
        android:text="35:24"
        android:layout_weight="0.15"
        android:layout_width="0dp"
        android:gravity="right|center_vertical"/>

    <TextView
        android:id="@+id/action_row_distance_abs"
        android:layout_height="fill_parent"
        android:text="5254m"
        android:textColor="@color/bn_white"
        android:textSize="13dip"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_weight="0.15"
        android:layout_width="0dp"
        android:gravity="right|center_vertical" />

</LinearLayout>





