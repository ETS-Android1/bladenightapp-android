<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <!-- Enable ProcessionProgressBar.setDemoData() if you want to see something in the progress bar in the editor -->
    <de.greencity.bladenightapp.android.map.ProcessionProgressBar
        android:id="@+id/progress_procession"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:maxHeight="48dip"
        android:minHeight="48dip"
        android:progressDrawable="@drawable/procession_progressbar"
        />

    <LinearLayout
        android:id="@+id/map_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="action view"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>